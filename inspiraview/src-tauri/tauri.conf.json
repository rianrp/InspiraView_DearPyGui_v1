{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "InspiraView",
  "version": "0.1.0",
  "identifier": "com.inspiraview.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "InspiraView",
        "width": 400,
        "height": 500,
        "minWidth": 320,
        "minHeight": 380,
        "resizable": true,
        "alwaysOnTop": true,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
